{
  "name": "lm-studio-adapter",
  "displayName": "LM Studio Adapter",
  "description": "Enables LM Studio model selection inside of VSCode Copilot Chat.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "LM Studio Adapter",
      "properties": {
        "lmStudioAdapter.apiUrl": {
          "type": "string",
          "default": "ws://localhost:1234",
          "description": "The base URL for the LM Studio API"
        }
      }
    },
    "languageModelChatProviders": [
      {
        "vendor": "lm-studio",
        "displayName": "LM Studio"
      }
    ],
    "commands": [
      {
        "command": "lm-studio-adapter.refreshModels",
        "title": "Refresh Models List",
        "category": "LM Studio"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.105.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.36.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@lmstudio/immer-with-plugins": "^10.1.1",
    "@lmstudio/sdk": "^1.5.0",
    "json-schema-to-zod": "^2.6.1"
  }
}
